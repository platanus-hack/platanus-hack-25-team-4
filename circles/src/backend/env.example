# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=circles_db
POSTGRES_PORT=5432

# Backend Configuration
NODE_ENV=development
BACKEND_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis / Mission Queue
REDIS_URL=redis://localhost:6379
MISSION_QUEUE_NAME=interview-missions
MISSION_WORKER_CONCURRENCY=5

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=noreply@circles.app

# Optional: Reply-to address
SES_REPLY_TO_EMAIL=hola@circles.app

# Resend Email Configuration (Alternative to AWS SES)
# Get your API key from: https://resend.com/api-tokens
RESEND_API_KEY=
RESEND_FROM_EMAIL=onboarding@resend.dev

# Email Provider Selection (resend | aws-ses | dev)
# - 'resend': Use Resend service (requires RESEND_API_KEY)
# - 'aws-ses': Use AWS SES service (requires AWS credentials)
# - 'dev': Console logging (default for development)
# Auto-detection: If RESEND_API_KEY is set, Resend is used. Otherwise, AWS SES or dev mode.
EMAIL_PROVIDER=dev

# Note: DATABASE_URL is automatically generated from POSTGRES_* variables in docker-compose.yml
# Format: postgresql://POSTGRES_USER:POSTGRES_PASSWORD@db:5432/POSTGRES_DB?schema=public

