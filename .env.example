# PostgreSQL Database Configuration
# Copy this file to .env and update with your actual credentials

# Database credentials
POSTGRES_USER=circles_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=circles-db
POSTGRES_PORT=5432

# Database connection URL for Python applications
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://circles_admin:your_secure_password_here@localhost:5432/circles-db

# Alternative connection URL for SQLAlchemy/asyncpg
# Use this for async database operations
DATABASE_URL_ASYNC=postgresql+asyncpg://circles_admin:your_secure_password_here@localhost:5432/circles-db
