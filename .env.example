################################################################################
# CIRCLES ETL - Environment Configuration Template
# Copy this file to .env and fill in your values
# See ENV_VALIDATION.md for detailed documentation
################################################################################

################################################################################
# REQUIRED - Application will not run without these
################################################################################

# Anthropic API Key (Claude Vision)
# Get from: https://console.anthropic.com
# Format: sk-ant-xxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# OpenAI API Key (Whisper)
# Get from: https://platform.openai.com
# Format: sk-xxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxx

################################################################################
# OPTIONAL - Database (defaults to localhost PostgreSQL)
################################################################################

# PostgreSQL async connection URL
# Default: postgresql+asyncpg://circles:circles@localhost/circles
# Production example: postgresql+asyncpg://user:password@prod-db.example.com:5432/circles
DATABASE_URL=postgresql+asyncpg://circles:circles@localhost/circles

# Connection pool settings
# DATABASE_POOL_SIZE=20        # Default: 20
# DATABASE_MAX_OVERFLOW=40     # Default: 40

################################################################################
# OPTIONAL - Redis & Celery (defaults to localhost Redis)
################################################################################

# Redis connection URL (used for Celery broker and result backend)
# Default: redis://localhost:6379/0
# REDIS_URL=redis://localhost:6379/0

# Optional: Override Celery broker (defaults to REDIS_URL)
# CELERY_BROKER_URL=redis://localhost:6379/0

# Optional: Override Celery result backend (defaults to REDIS_URL)
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

################################################################################
# OPTIONAL - File Upload Settings
################################################################################

# Directory for temporary file storage
# Default: /tmp/etl_uploads
# UPLOAD_DIR=/tmp/etl_uploads

# Maximum upload file size in bytes
# Default: 52428800 (50 MB)
# MAX_UPLOAD_SIZE=52428800

# Auto-delete uploaded files after N hours
# Default: 24
# UPLOAD_CLEANUP_HOURS=24

################################################################################
# OPTIONAL - Adapter-Specific Settings
################################################################################

# Resume Processing
# RESUME_MIN_SIZE=1024            # Default: 1 KB
# RESUME_MAX_SIZE=10485760        # Default: 10 MB

# Photo/Image Processing
# PHOTO_MAX_SIZE=26214400         # Default: 25 MB
# VLM_MODEL=claude-3-5-sonnet-20241022  # Default: Claude 3.5 Sonnet

# Audio/Voice Note Processing
# AUDIO_MAX_SIZE=52428800         # Default: 50 MB
# WHISPER_MODEL=whisper-1         # Default: Whisper-1

# Calendar Processing
# CALENDAR_MAX_SIZE=5242880       # Default: 5 MB

################################################################################
# OPTIONAL - Application Settings
################################################################################

# Application name
# APP_NAME=Circles ETL

# Enable debug mode (DANGER: Only use in development!)
# DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

################################################################################
# OPTIONAL - Processing Configuration
################################################################################

# Celery task timeout in seconds
# MAX_PROCESSING_TIME_SECONDS=300

# Number of retries for failed tasks
# MAX_RETRIES=3

# Delay between retries in seconds
# RETRY_DELAY_SECONDS=5

################################################################################
# OPTIONAL - Batch Processing
################################################################################

# Items per batch for bulk operations
# BATCH_SIZE=10

# Maximum parallel Celery tasks
# MAX_CONCURRENT_TASKS=5

################################################################################
# OPTIONAL - Cleanup Settings
################################################################################

# Auto-delete failed upload files
# AUTO_CLEANUP_FAILED_UPLOADS=True

# Cleanup job interval in hours
# CLEANUP_INTERVAL_HOURS=1

################################################################################
# PostgreSQL Setup (for new installations)
################################################################################

# Create database:
# createdb circles

# Create extensions (if needed for full-text search):
# psql circles
# CREATE EXTENSION IF NOT EXISTS pgvector;
# CREATE EXTENSION IF NOT EXISTS pg_trgm;
