# Circles ETL Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Circles ETL
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/circles_etl
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration (for Celery broker/backend)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Keys (REQUIRED - these must be set)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxx

# File Upload Configuration
UPLOAD_DIR=/tmp/etl_uploads
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Resume Processing
RESUME_MIN_SIZE=1024  # 1KB minimum

# Photo Processing
PHOTO_MAX_SIZE=26214400  # 25MB in bytes
PHOTO_MIN_SIZE=10240     # 10KB minimum

# Voice Note Processing
VOICE_NOTE_MAX_SIZE=52428800  # 50MB in bytes
VOICE_NOTE_MIN_SIZE=10240     # 10KB minimum

# Calendar Processing
CALENDAR_MAX_SIZE=5242880  # 5MB in bytes

# Database Extensions (PostgreSQL)
# Ensure these extensions are enabled in your PostgreSQL database:
# - pgvector (for embeddings)
# - postgis (for geospatial data)
# - pg_trgm (for full-text search)

# Create extensions with:
# CREATE EXTENSION IF NOT EXISTS pgvector;
# CREATE EXTENSION IF NOT EXISTS postgis;
# CREATE EXTENSION IF NOT EXISTS pg_trgm;
